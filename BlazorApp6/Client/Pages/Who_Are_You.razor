@page "/Who_Are_You"
@inject HttpClient Http

<PageTitle>Who are you</PageTitle>
<div>
    <p>
        Your Name
        <input type="text"
            required
            minlength="2" maxlength="18" size="15"
            @bind-value="pan.Name"
            @bind-value:event="oninput"/>
    </p>
    <p>
        <button class="btn btn-warning" @onclick="(e) => this.OnClick(e)">@y</button>
    </p>
    <p>
        let me guess @pan.Name you are @tmpage yo
    </p>
</div>
@code {
    private int tmpage = 0;
    private string y = "confirm";
    Pearson pan = new Pearson{Name="",Age=111};
    Random rnd = new Random();
    private async void OnClick(MouseEventArgs e)
    {
        await DoSomethingAsync();
        y = "no";
        tmpage = rnd.Next(1, 120);
    }
    private Task DoSomethingAsync()
    {
        Task.Yield();
        pan.Age = tmpage;

        return Task.CompletedTask;
    }

    class Pearson{
        public string Name{ get; set; }
        public int Age{ get; set; }
    }
}
