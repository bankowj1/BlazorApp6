@page "/listFunctionalities"
@inject NavigationManager NavMeg

<div>
    <ul>
        @for (int i = 0; i < Dests.Length-1; i++)
        {
            var tempint = i;
            <li>
                <h2>@Descs[i]</h2>

                <button class="button" @onclick="@(() => Changeddest(tempint))">@Dests[i] </button>
            </li>
            }

    </ul>

</div>
@code{
    private string[] Dests = { "counter", "geo", "counter", "blue", "cheese", "counter", "file", "clip", "geo", "counter" };
    private string[] Descs = { "Seamless Experience:Credentials", "Native Behaviors:Permissions", "App Lifecycle: Home Screen Installation", "Surroundings:Bluetooth",
    "Camera & Microphone: Audio & Video Capture", "Device Features:Online State", "Operating System: File Access","Input: Clipboard (Copy & Paste)",
    "Location & Position: Geolocation","Screen & Output: Fullscreen" };
    void Changeddest(int i)
    {
        NavMeg.NavigateTo("/" + Dests[i]);
    }
}


